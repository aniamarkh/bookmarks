{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "chrome"
    ],
    "lib": [
      "DOM",
      "ES2019"
    ],
    "ignoreDeprecations": "5.0"
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}